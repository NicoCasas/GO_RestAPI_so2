###Sacado de 

##Configuracion global

User_Alias USR_SISTEMAS_OPERATIVOS = sistemas_operativos

##COMANDOS
Cmnd_Alias CMD_USERADD = /usr/sbin/useradd
Cmnd_Alias CMD_PASSWD = /usr/bin/passwd
Cmnd_Alias CMD_GROUPADD = /usr/sbin/groupadd

##REGLAS
USR_SISTEMAS_OPERATIVOS ALL = NOPASSWD:CMD_USERADD
USR_SISTEMAS_OPERATIVOS ALL = NOPASSWD:CMD_PASSWD
USR_SISTEMAS_OPERATIVOS ALL = NOPASSWD:CMD_GROUPADD

